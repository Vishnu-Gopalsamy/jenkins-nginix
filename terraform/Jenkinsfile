pipeline {
    agent any

    environment {
        AWS_DEFAULT_REGION = 'us-east-1'
    }

    stages {

        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Terraform Deploy') {
            steps {
                dir('terraform') {
                    sh 'terraform init'
                    sh 'terraform plan -var="ami=ami-0abc1234def567890"'
                    sh 'terraform apply -var="ami=ami-0abc1234def567890" -auto-approve'
                }
            }
        }
    }
}
